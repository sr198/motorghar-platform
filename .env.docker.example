# Docker Compose Environment Variables Template
# Copy this file to .env.docker and customize for your environment

# PostgreSQL Configuration
POSTGRES_USER=motorghar
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=motorghar
POSTGRES_PORT=5432

# pgAdmin Configuration
PGADMIN_EMAIL=admin@motorghar.com
PGADMIN_PASSWORD=changeme_admin_password
PGADMIN_PORT=5050

# Redis Configuration
REDIS_PORT=6379
REDIS_AOF_ENABLED=yes
REDIS_AOF_SYNC=everysec

# MinIO Configuration
MINIO_ROOT_USER=motorghar
MINIO_ROOT_PASSWORD=changeme_minio_password
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# MinIO Buckets
MINIO_BUCKET_DOCUMENTS=motorghar-documents
MINIO_BUCKET_DEFAULTS=motorghar-defaults
MINIO_BUCKET_USER_UPLOADS=motorghar-user-uploads

# Health Check Configuration
HEALTHCHECK_INTERVAL=10s
HEALTHCHECK_TIMEOUT=5s
HEALTHCHECK_RETRIES=5

# Docker Project Name
COMPOSE_PROJECT_NAME=motorghar
