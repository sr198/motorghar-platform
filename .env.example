# Database Configuration
DATABASE_URL="postgresql://motorghar:motorghar_dev_password@localhost:5432/motorghar?schema=public"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# MinIO Configuration
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY="motorghar"
MINIO_SECRET_KEY="motorghar_minio_password"
MINIO_BUCKET_DOCUMENTS="motorghar-documents"
MINIO_BUCKET_DEFAULTS="motorghar-defaults"
MINIO_BUCKET_USER_UPLOADS="motorghar-user-uploads"

# JWT Configuration
# JWT_SECRET: Min 32 characters required (validated)
# JWT_ACCESS_EXPIRY: Access token time-to-live (e.g., 15m, 1h)
# JWT_REFRESH_EXPIRY: Refresh token time-to-live (e.g., 7d, 30d)
# JWT_ISSUER: Token issuer identifier
# JWT_AUDIENCE: Token audience identifier
JWT_SECRET="your-super-secret-jwt-key-change-in-production-must-be-at-least-32-chars"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production-must-be-at-least-32-chars"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"
JWT_ISSUER="motorghar"
JWT_AUDIENCE="motorghar-client"

# Session Configuration
# SESSION_MAX_PER_USER: Maximum concurrent sessions per user (0 = unlimited)
# SESSION_TRACK_DEVICES: Enable device info tracking (true/false)
# SESSION_CLEANUP_INTERVAL: Session cleanup job interval in seconds
SESSION_MAX_PER_USER=5
SESSION_TRACK_DEVICES=true
SESSION_CLEANUP_INTERVAL=3600

# Session Features (Future)
# SESSION_REMEMBER_ME_ENABLED: Enable remember-me functionality (true/false)
# SESSION_REMEMBER_ME_EXPIRY: Remember-me token TTL (e.g., 30d)
# SESSION_SLIDING_ENABLED: Extend session on activity (true/false)
SESSION_REMEMBER_ME_ENABLED=false
SESSION_REMEMBER_ME_EXPIRY="30d"
SESSION_SLIDING_ENABLED=false

# Security Features (Future)
# AUTH_IP_RATE_LIMIT_ENABLED: Enable IP-based rate limiting (true/false)
# AUTH_DETECT_SUSPICIOUS_LOGIN: Enable anomaly detection (true/false)
# AUTH_2FA_ENABLED: Enable two-factor authentication (true/false)
AUTH_IP_RATE_LIMIT_ENABLED=false
AUTH_DETECT_SUSPICIOUS_LOGIN=false
AUTH_2FA_ENABLED=false

# Performance Configuration (Future)
# RBAC_CACHE_ENABLED: Cache user roles in Redis (true/false)
# RBAC_CACHE_TTL: Role cache time-to-live in seconds
# SESSION_CACHE_ENABLED: Cache session validation (true/false)
# SESSION_CACHE_TTL: Session cache time-to-live in seconds
RBAC_CACHE_ENABLED=false
RBAC_CACHE_TTL=300
SESSION_CACHE_ENABLED=false
SESSION_CACHE_TTL=60

# API Configuration
PORT=3000
NODE_ENV="development"
API_VERSION="v1"

# CORS Configuration
CORS_ORIGIN="http://localhost:4200,http://localhost:4201,http://localhost:4202"

